{
  "name": "paperwall",
  "private": true,
  "workspaces": ["packages/*", "test/integration"],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "test:unit": "npm run test --workspaces --if-present",
    "test:integration": "npm run test --workspace=@paperwall/integration-tests",
    "test:all": "npm run test:unit && npm run test:integration",
    "lint": "tsc --noEmit --project packages/sdk/tsconfig.json && tsc --noEmit --project packages/extension/tsconfig.json",
    "demo": "node demo/server.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "license": "GPL-3.0"
}
